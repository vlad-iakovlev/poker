{
  "name": "@vlad-yakovlev/poker",
  "version": "0.0.0",
  "description": "Texas Hold'em poker library",
  "keywords": [
    "poker",
    "texas hold'em"
  ],
  "homepage": "https://github.com/vlad-iakovlev/poker#readme",
  "bugs": "https://github.com/vlad-iakovlev/poker/issues",
  "repository": "https://github.com/vlad-iakovlev/poker.git",
  "license": "MIT",
  "author": "Vladislav Iakovlev",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "compile": "tsc --noEmit",
    "lint": "eslint .",
    "lint:ci": "DEBUG=eslint:eslint eslint .",
    "prettier": "prettier --write '**/*.(ts|js|md|json)'",
    "prettier:ci": "prettier --check '**/*.(ts|js|md|json)'",
    "test": "vitest run --coverage --coverage.include='src/**/*.ts'",
    "test:ci": "vitest run",
    "test:codecov": "npx vitest run --coverage --coverage.include='src/**/*.ts'"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "remeda": "^2.32.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^4.0.14",
    "@vlad-iakovlev/eslint-config": "^1.0.0",
    "eslint": "^9.39.1",
    "jiti": "^2.6.1",
    "lefthook": "^2.0.4",
    "prettier": "^3.7.3",
    "prettier-plugin-packagejson": "^2.5.20",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  }
